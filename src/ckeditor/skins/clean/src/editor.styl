  background-position 0 10px
  background-repeat no-repeat
  padding 0 5px
  span
    display none

.cke_combo
  display inline-block
  float left

.cke_combo_label
  display none
  float left
  line-height 26px
  vertical-align top
  margin-right 5px

.cke_combo_text
