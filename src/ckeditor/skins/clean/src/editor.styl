.cke_contents_wrap
  position: relative

.cke_pasteimage_placeholder:after,
.cke_pastefile_placeholder:before
  content: attr(data-cke-pastefile-placeholder)
  display: flex
  justify-content: center
  align-items: center
  font: 33px Arial, sans-serif
  color: rgba(#000, 0.4)
  background-color: rgba(#fff, 0.6)
  border: 4px dashed rgba(#000, 0.2)
  pointer-events: none
  z-index: 99

.cke_pasteimage_placeholder:after
  position: absolute
  top: -5px
  right: -5px
  left: -10px
  bottom: -5px

  .cke_maximized &
    left: 0
    right: 0
    display: flex !important

.cke_pastefile_placeholder
  &:before
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0

  &.cke_pasteimage_placeholder:after
    background-color: transparent

  & .cke_pasteimage_placeholder:after
    background-color: transparent
    border-color: rgba(#000, 0.7)
    color: rgba(#000, 1)

.js-pastefile-compose
  &.cke_pastefile_placeholder:before
    margin: -10px 0
    position: absolute

  & .cke_pasteimage_placeholder:after
    display: none

.mail-ComposeSidebar-Popup
  & .mail-Compose
    &.cke_pastefile_placeholder:before
      margin: 0 0 -10px 0

.cke_pastefile_loader
  &:before
    content: ""
    pointer-events: none
    z-index: 99
    position: absolute
    display: block
    top: 0
    right: 0
    left: 0
    bottom: 0
    background: rgba(#fff, 0.6) url("data:image/svg+xml;utf8,%3Csvg%20width=%2728px%27%20height=%2728px%27%20viewBox=%270%200%2028%2028%27%20xmlns=%27http%3A//www.w3.org/2000/svg%27%3E%3Ccircle%20fill=%27none%27%20stroke-width=%272%27%20stroke-dashoffset=%2781.68%27%20stroke-dasharray=%2740.84%27%20stroke=%27%23fc0%27%20cx=%2714%27%20cy=%2714%27%20r=%2713%27%3E%3Canimate%20attributeName=%27stroke-dashoffset%27%20from=%2781.68%27%20to=%270%27%20dur=%271s%27%20repeatCount=%27indefinite%27%20/%3E%3C/circle%3E%3C/svg%3E") no-repeat center center





