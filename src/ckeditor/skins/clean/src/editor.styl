.cke_menubutton_on
  border 1px solid #dedede
  background-color #f2f2f2
  box-shadow 0 0 2px rgba(0,0,0,.1) inset
  .cke_menubutton_icon
    padding-right 3px

.cke_menuseparator
  background-color #D3D3D3
  height 1px
  opacity 0.70

.cke_menuarrow
