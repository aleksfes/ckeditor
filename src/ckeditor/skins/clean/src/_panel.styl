.cke_panel
  visibility: visible
  width: 120px
  height: 100px
  overflow: hidden
  background-color: #fff
  border: 1px solid #b6b6b6
  border-bottom-color: #999
  border-radius: 3px
  box-shadow: 0 0 3px rgba(#000, .15)

.cke_menu_panel
  padding: 0
  margin: 0

.cke_combopanel
  width: 150px
  height: 170px

.cke_panel_frame
  width: 100%
  height: 100%
  font-size: 12px
  overflow: auto
  overflow-x: hidden

  & .cke_menubutton_label
    display: none

.cke_panel_container
  overflow-y: auto
  overflow-x: hidden

.cke_panel_list
  list-style-type: none
  margin: 3px
  padding: 0
  white-space: nowrap

.cke_panel_listItem
  margin: 0
  padding-bottom: 1px

  & a
    padding: 3px 4px
    display: block
    border: 1px solid #fff
    color: inherit !requireant
    text-decoration: none
    overflow: hidden
    text-overflow: ellipsis
    border-radius: 2px

  &.cke_selected
    & a
      border: 1px solid #dedede
      background-color: #f2f2f2
      box-shadow: 0 0 2px rgba(#000, .1) inset

.cke_panel_listItem
  & a
    border-style: none

    &:hover,
    &:focus,
    &:active
      border-color: #dedede
      background-color: #f2f2f2
      box-shadow: 0 0 2px rgba(#000,.1) inset

      .cke_hc &
        border: 2px solid
        padding: 1px 2px

.cke_panel_grouptitle
  cursor: default
  font-size: 11px
  font-weight: bold
  white-space: nowrap
  margin: 0
  padding: 4px 6px
  color: #474747
  text-shadow: 0 1px 0 rgba(#fff,.75)
  border-bottom: 1px solid #b6b6b6
  border-radius: 2px 2px 0 0
  box-shadow: 0 1px 0 #fff inset
  background: #cfd1cf
  background-image: linear-gradient(to bottom, #f5f5f5, #cfd1cf)

.cke_panel_listItem
  & p,
  & h1,
  & h2,
  & h3,
  & h4,
  & h5,
  & h6,
  & pre
    margin-top: 0px
    margin-bottom: 0px
