.cke_button__translate_label
  display: inline

.cke_button__translate_icon
  display: none

.cke_contents_wrap_translate
  display: flex
  align-items: stretch

.cke_contents_wrap_translate
  & > .cke_contents
    flex-grow: 1
    flex-shrink: 0
    flex-basis: 0
    padding-right: 15px

  & > .cke_translate_wrap
    flex-grow: 1
    flex-shrink: 0
    flex-basis: 0
    position: relative
    overflow-y: auto
    overflow-x: hidden
    padding-left: 15px

    &:before
      content: ""
      position: absolute
      display: block
      top: 0
      left: 0
      bottom: 25%
      border-left: 1px solid #ccc

  & .cke_translate_content
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    margin-left: 15px
    opacity: 0.5

.cke_translate_header
  position: relative
  display: flex
  justify-content: center
  text-transform: uppercase
  color: #999
  margin: 5px 0

.cke_translate_header_info
  position: absolute
  right: 0
  color: #999

  &:hover
    color: #000

.cke_translate_header_from
  flex-grow: 1
  flex-shrink: 0
  flex-basis: 0
  text-align: right
  margin-right: 15px

.cke_translate_header_to
  flex-grow: 1
  flex-shrink: 0
  flex-basis: 0
  margin-left: 15px

.cke_translate_lang
  cursor: pointer

  &:hover
    color: #000
